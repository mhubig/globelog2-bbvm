{
  "variables": {
    "ssh_pub_key": "./id_docker.pub"
  },

  "builders": [{
    "type": "amazon-ebs",
    "region": "eu-west-1",
    "source_ami": "ami-8e987ef9",
    "instance_type": "c1.xlarge",
    "ssh_username": "ubuntu",
    "ami_name": "docker {{timestamp}}",
    "ami_description": "docker image"
  }],

  "provisioners": [
    { "type": "file",
      "source": "{{user `ssh_pub_key`}}",
      "destination": "/ssh_key.pub"
    },
    { "type": "shell",
      "scripts": [
        "scripts/base.sh",
        "scripts/vagrant.sh",
        "scripts/kernel.sh",
        "scripts/docker.sh"
      ],
      "execute_command":
        "chmod +x {{ .Path }}; {{ .Vars }} sudo -E '{{ .Path }}'"
    }
  ],

  "post-processors": [{
    "type": "vagrant",
    "output": "docker_{{.Provider}}.box",
    "aws": {
      "vagrantfile_template": "templates/aws_vagrantfile"
    }
  }]
}
